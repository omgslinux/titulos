{% extends 'base.html.twig' %}

{% block body %}
    <h1>Gestora {{ fundmanager.shortname }}</h1>

    <table>
        <tbody>
            <tr>
                <th>Shortname</th>
                <td>{{ fundmanager.shortname }}</td>
            </tr>
            <tr>
                <th>Longname</th>
                <td>{{ fundmanager.longname }}</td>
            </tr>
            <tr>
                <th>Nif</th>
                <td>{{ fundmanager.nif }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ fundmanager.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manage_fundmanagers_index') }}">Volver a la lista</a>
        </li>
        <li>
            <a href="{{ path('manage_fundamanagers_edit', { 'id': fundmanager.id }) }}">Editar</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Borrar">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
