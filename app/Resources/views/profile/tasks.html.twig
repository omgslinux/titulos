{% extends 'custom.html.twig' %}

{% block body %}

<h1>{{ action }}</h3>
    {% if user.tasks %}
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>Fondo</th>
                <th>Entidad</th>
                <th>Tipo préstamo</th>
                <th>Fecha</th>
                <th>Descripción</th>
                <th>Finalizada</th>
            </tr>
            {% for task in user.tasks %}
            <tr>
                <td>{{ task.fundbank.fundname }}</td>
                <td>{{ task.fundbank.bankname }}</td>
                <td>{{ task.fundbank.loantype }}</td>
                <td><a href="{{ path('profile_tasks_edit', { 'id': task.id }) }}">{{ task.taskdate|date('d/m/Y') }}</a></td>
                <td>{{ task.shortdescription }}</td>
                <td>{% if task.finished %}X{% else %}No{% endif %}</td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
    {% else %}
        <p>No hay tareas</p>
    {% endif %}
    <ul>
        <li>
            <a href="{{ backlink }}">{{ backmessage }}</a>
        </li>
    </ul>
{% endblock %}
