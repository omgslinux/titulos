{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista de leyes</h1>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Número</th>
                <th>Descripción</th>
            </tr>
        </thead>
        <tbody>
        {% for law in laws %}
            <tr>
                <td>{{ law }}</td>
                <td><a href="{{ path('manage_laws_show', { 'id': law.id }) }}">{{ law.shortname }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('manage_laws_new') }}">Añadir una ley</a>
        </li>
    </ul>
    <p><a href="{{ path('manage') }}">Volver al menú de gestión</a></p>
{% endblock %}
